<Window x:Class="GestorDeTorneos.Vistas.Liga"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Modo Liga"
        Width="1024" Height="650"
        WindowStartupLocation="CenterScreen">

    <!-- 🎨 Fondo con gradiente oscuro tipo FC25 -->
    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#111111" Offset="0.0"/>
            <GradientStop Color="#1F1F1F" Offset="0.5"/>
            <GradientStop Color="#0A0A0A" Offset="1.0"/>
        </LinearGradientBrush>
    </Window.Background>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="320"/>
            <!-- Panel izquierdo -->
            <ColumnDefinition Width="*"/>
            <!-- Tabla principal -->
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <!-- Título -->
            <RowDefinition Height="*"/>
            <!-- Contenido -->
            <RowDefinition Height="90"/>
            <!-- Botones inferiores -->
        </Grid.RowDefinitions>

        <!-- 🏆 Título -->
        <TextBlock Text="Modo Liga"
                   FontFamily="Orbitron"
                   FontSize="32"
                   FontWeight="Bold"
                   Foreground="#2FFF88"
                   HorizontalAlignment="Center"
                   Margin="0,20,0,20"/>
        <StackPanel
                    Orientation="Vertical"
                    HorizontalAlignment="Center"
                    Margin="0,130,0,40" Grid.RowSpan="2">

            <Label Content="Agregar equipos"
                   FontFamily="Orbitron"
                   FontSize="18"
                   Foreground="White"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,10,0,10"/>

            <!-- 📝 Caja de texto -->
            <TextBox x:Name="txtEquipo"
                     Width="180"
                     FontFamily="Agency FB"
                     FontSize="16"
                     Background="#1E1E1E"
                     Foreground="White"
                     BorderBrush="#2FFF88"
                     BorderThickness="1.5"
                     Padding="5"
                     Margin="10"
                     HorizontalAlignment="Center"
                     TextWrapping="Wrap"/>

            <!-- 🔘 Botones -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                <Button Content="Agregar"
                        Width="100"
                        FontFamily="Orbitron"
                        FontSize="14"
                        Foreground="White"
                        Background="Transparent"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="BtnAgregar_Click"/>
                <Button Content="Eliminar"
                        Width="100"
                        FontFamily="Orbitron"
                        FontSize="14"
                        Foreground="White"
                        Background="Transparent"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="BtnEliminar_Click"/>
            </StackPanel>

            <!-- 📜 Lista de equipos -->
            <ListBox x:Name="listEquipos"
                     Margin="10,10,10,0"
                     Background="#1A1A1A"
                     BorderBrush="#2FFF88"
                     BorderThickness="1.5"
                     Foreground="White"
                     FontFamily="Agency FB"
                     FontSize="16"
                     Height="209"
                     ScrollViewer.VerticalScrollBarVisibility="Auto"/>
        </StackPanel>
        <DataGrid x:Name="tablaPosiciones"
          Grid.Row="1"
          Grid.Column="1"
          Margin="10,72,10,10"
          AutoGenerateColumns="False"
          Background="#121212"
          Foreground="White"
          FontFamily="Agency FB"
          FontSize="16"
          BorderBrush="#2FFF88"
          BorderThickness="1.5"
          RowBackground="#0A0A0A"
          AlternatingRowBackground="#111111"
          HeadersVisibility="Column"
          CanUserAddRows="False" Grid.RowSpan="2">

            <DataGrid.Resources>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="#2FFF88"/>
                    <Setter Property="Foreground" Value="Black"/>
                    <Setter Property="FontFamily" Value="Orbitron"/>
                    <Setter Property="FontSize" Value="14"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                    <Setter Property="Height" Value="30"/>
                </Style>

                <Style TargetType="DataGridCell">
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="FontFamily" Value="Agency FB"/>
                    <Setter Property="FontSize" Value="16"/>
                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                    <Setter Property="BorderThickness" Value="0"/>
                </Style>
            </DataGrid.Resources>

            <DataGrid.Columns>
                <DataGridTextColumn Header="Equipo" Binding="{Binding Nombre}" Width="*"/>
                <DataGridTextColumn Header="PJ" Binding="{Binding PartidosJugados}" Width="60"/>
                <DataGridTextColumn Header="PG" Binding="{Binding Ganados}" Width="60"/>
                <DataGridTextColumn Header="PE" Binding="{Binding Empatados}" Width="60"/>
                <DataGridTextColumn Header="PP" Binding="{Binding Perdidos}" Width="60"/>
                <DataGridTextColumn Header="GF" Binding="{Binding GolesFavor}" Width="60"/>
                <DataGridTextColumn Header="GC" Binding="{Binding GolesContra}" Width="60"/>
                <DataGridTextColumn Header="DG" Binding="{Binding Diferencia}" Width="60"/>
                <DataGridTextColumn Header="Pts" Binding="{Binding Puntos}" Width="70"/>
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel x:Name="panelPartidoActual"
            Grid.Row="0" Grid.Column="1"
            Orientation="Vertical"
            HorizontalAlignment="Center"
            Margin="0,10,0,10">

            <TextBlock x:Name="txtJornadaActual"
               Text="Jornada 1"
               FontFamily="Orbitron"
               FontSize="20"
               Foreground="#2FFF88"
               Margin="0,5,0,10"
               HorizontalAlignment="Center"/>
            
           

            <TextBlock x:Name="txtPartidoActual"
               Text="EquipoA vs EquipoB"
               FontFamily="Orbitron"
               FontSize="18"
               Foreground="White"
               Margin="0,5,0,10"
               HorizontalAlignment="Center"/>

            <!-- Inputs de goles -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBox x:Name="txtGolesLocal"
                 Width="50"
                 FontSize="16"
                 TextAlignment="Center"
                 Margin="5"
                 Background="#1E1E1E"
                 Foreground="White"
                BorderBrush="#2FFF88"
                BorderThickness="1.5"/>

                <TextBlock  x:Name="lblGuion"
                    Text=" - "
                   FontSize="20"
                   Foreground="White"
                   VerticalAlignment="Center"/>

                <TextBox x:Name="txtGolesVisitante"
                 Width="50"
                 FontSize="16"
                 TextAlignment="Center"
                 Margin="5"
                 Background="#1E1E1E"
                    Foreground="White"
                BorderBrush="#2FFF88"
                    BorderThickness="1.5" />
            </StackPanel>

            <Button Content="Registrar Resultado"
            x:Name="btnRegistrarResultado"
            FontFamily="Orbitron"
            FontSize="16"
            Foreground="White"
            Background="Transparent"
            
            Cursor="Hand"
            Margin="0,10,0,0"
            Click="BtnRegistrarResultado_Click"/>

        </StackPanel>
        <Button Content="Iniciar Liga"
            Grid.Row="2"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontFamily="Orbitron"
            FontSize="18"
            Foreground="White"
            Background="Transparent"
            BorderThickness="0"
            Cursor="Hand"
            Click="BtnIniciarLiga_Click"/>
    </Grid>

</Window>
