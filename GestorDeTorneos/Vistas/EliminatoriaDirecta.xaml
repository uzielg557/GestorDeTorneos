<Window x:Class="GestorDeTorneos.Vistas.EliminatoriaDirecta"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:local="clr-namespace:GestorDeTorneos.Vistas"
        mc:Ignorable="d"
        Title="Modo Eliminatorias" Width="1024" Height="650"
         WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Style x:Key="BotonTorneo" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#2FFF88"/>
            <Setter Property="FontFamily" Value="Orbitron"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Width" Value="70"/>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Setter.Value>
            </Setter>

            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="#2FFF88"/>
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <ScaleTransform ScaleX="1.1" ScaleY="1.1"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Foreground" Value="#1CCC66"/>
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <ScaleTransform ScaleX="0.95" ScaleY="0.95"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#111111" Offset="0.0"/>
            <GradientStop Color="#1F1F1F" Offset="0.5"/>
            <GradientStop Color="#0A0A0A" Offset="1.0"/>
        </LinearGradientBrush>
    </Window.Background>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="320"/>
            <!-- Panel izquierdo -->
            <ColumnDefinition Width="*"/>
            <!-- Zona de llaves -->
        </Grid.ColumnDefinitions>


        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <!-- Título -->
            <RowDefinition Height="auto"/>
            <!-- Registro -->
            <RowDefinition Height="*"/>
            <!-- Lista -->
            <RowDefinition Height="90"/>
            <!-- Botones inferiores -->
        </Grid.RowDefinitions>

        <TextBlock Text="Modo Eliminatorias"
           FontFamily="Orbitron"
           FontSize="32"
           FontWeight="Bold"
           Foreground="#2FFF88"
           HorizontalAlignment="Center"
           Margin="0,20,0,20"
           Grid.Row="0" />


        <StackPanel Grid.Row="1"
            Grid.Column="0"
            Orientation="Vertical"
            HorizontalAlignment="Center"
            Margin="0,0,0,0"
             x:Name="panelRegistro"
                    >

            <!-- 🏷️ Etiqueta del título -->
            <Label Content="Escribe el nombre de tu equipo"
           FontFamily="Orbitron"
           FontSize="18"
           Foreground="White"
           FontWeight="Bold"
           HorizontalAlignment="Center"
           Margin="0,10,0,10"/>

            <!-- 📝 Caja de texto -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" >
                <TextBox x:Name="txtEquipo"
                 Width="180"
                 FontFamily="Agency FB"
                 FontSize="16"
                 Background="#1E1E1E"
                 Foreground="White"
                 BorderBrush="#2FFF88"
                 BorderThickness="1.5"
                 Padding="5"
                 Margin="10"
                 HorizontalAlignment="Center"
                 VerticalAlignment="Center"
                 TextWrapping="Wrap"/>
            </StackPanel>

            <!-- 🔘 Botones -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                <Button Content="Agregar"
                Width="130"
                FontFamily="Orbitron"
                FontSize="16"
                Foreground="White"
                Background="Transparent"
                BorderThickness="0"
                Margin="10,0,10,0"
                Cursor="Hand"
                Click="BtnAgregar_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                            <Setter Property="RenderTransform">
                                <Setter.Value>
                                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Foreground" Value="#2FFF88"/>
                                    <Setter Property="RenderTransform">
                                        <Setter.Value>
                                            <ScaleTransform ScaleX="1.1" ScaleY="1.1"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <Button Content="Eliminar Seleccionado"
                Width="180"
                FontFamily="Orbitron"
                FontSize="16"
                Foreground="White"
                Background="Transparent"
                BorderThickness="0"
                Margin="10,0,10,0"
                Cursor="Hand"
                Click="BtnEliminar_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                            <Setter Property="RenderTransform">
                                <Setter.Value>
                                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Foreground" Value="#2FFF88"/>
                                    <Setter Property="RenderTransform">
                                        <Setter.Value>
                                            <ScaleTransform ScaleX="1.1" ScaleY="1.1"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </StackPanel>








        <ListBox x:Name="listEquipos"
         Grid.Row="2"
         Grid.Column="0"
         Margin="20,10,20,10"
         Background="#1A1A1A"
         BorderBrush="#2FFF88"
         BorderThickness="1.5"
         Foreground="White"
         FontFamily="Agency FB"
         FontSize="16"
         ScrollViewer.VerticalScrollBarVisibility="Auto"
         HorizontalContentAlignment="Center"
         VerticalContentAlignment="Center"
                 >
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="Margin" Value="4"/>
                    <Setter Property="Padding" Value="6"/>
                    <Setter Property="HorizontalAlignment" Value="Stretch"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Style.Triggers>
                        <!-- Hover -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#222222"/>
                            <Setter Property="Foreground" Value="#2FFF88"/>
                        </Trigger>
                        <!-- Seleccionado -->
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="#2FFF88"/>
                            <Setter Property="Foreground" Value="Black"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </ListBox.ItemContainerStyle>
        </ListBox>



        <Button Content="Empezar Torneo"
        x:Name="BtnEmpezar"
        Grid.Row="3"
        Grid.Column="0"
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        Margin="0,10,0,10"
        FontFamily="Orbitron"
        FontSize="18"
        Foreground="White"
        Background="Transparent"
        BorderThickness="0"
        Cursor="Hand"
        Click="BtnEmpezar_Click"
                                            >
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <ScaleTransform ScaleX="1" ScaleY="1"/>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Foreground" Value="#2FFF88"/>
                            <Setter Property="RenderTransform">
                                <Setter.Value>
                                    <ScaleTransform ScaleX="1.1" ScaleY="1.1"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>

        <ScrollViewer Grid.Row="1" Grid.Column="1" Grid.RowSpan="3" Margin="10" VerticalScrollBarVisibility="Auto">
            <!-- 🔹 Ahora usamos un StackPanel centrado para mostrar las rondas en columna -->
            <StackPanel x:Name="ZonaLlaves" Orientation="Vertical" HorizontalAlignment="Center" />
        </ScrollViewer>

    </Grid>
</Window>
