<Window x:Class="GestorDeTorneos.Vistas.SeleccionarClasificados"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Seleccionar equipos clasificados"
        Height="350" Width="420"
        WindowStartupLocation="CenterScreen"
        Background="#0D0D0D"
        ResizeMode="NoResize">

    <!-- ESTILOS -->
    <Window.Resources>

        <!-- NeonButtonStyle -->
        <Style x:Key="NeonButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#00FF66"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="8"
                                Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#22FF88"/>
                </Trigger>

                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#008833"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>

    </Window.Resources>

    <!-- CONTENIDO -->
    <Grid>

        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">

            <TextBlock Text="Seleccionar equipos clasificados"
                       Foreground="#00FF66"
                       FontSize="26"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       TextAlignment="Center"
                       Margin="0 0 0 20"/>

            <Button Content="Top 4"
                    Width="160" Height="45"
                    Click="Btn4_Click"
                    Style="{StaticResource NeonButtonStyle}"/>

            <Button Content="Top 8"
                    Width="160" Height="45"
                    Click="Btn8_Click"
                    Style="{StaticResource NeonButtonStyle}"/>

            <Button Content="Top 16"
                    Width="160" Height="45"
                    Click="Btn16_Click"
                    Style="{StaticResource NeonButtonStyle}"/>

        </StackPanel>

    </Grid>
</Window>