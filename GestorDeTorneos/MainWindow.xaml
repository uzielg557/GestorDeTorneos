<Window x:Class="GestorDeTorneos.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gestor de Torneos"
        Height="450" Width="800"
        WindowStartupLocation="CenterScreen">

    <!-- 🎨 Fondo tipo EA FC25 -->
    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#0E0E0E" Offset="0.0"/>
            <GradientStop Color="#1A1A1A" Offset="0.5"/>
            <GradientStop Color="#000000" Offset="1.0"/>
        </LinearGradientBrush>
    </Window.Background>

    <Grid>
        <!-- 🏆 Título principal -->
        <TextBlock Text="Gestor De Torneos"
                   FontFamily="Orbitron"
                   FontSize="42"
                   FontWeight="Bold"
                   Foreground="White"
                   HorizontalAlignment="Center"
                   Margin="0,60,0,0"/>

        <!-- 📋 Contenedor de los botones -->
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,40,0,0">

            <!-- ⚔️ Botón Eliminatoria -->
            <Button Content="Eliminatoria Directa"
        FontFamily="Orbitron"
        FontSize="20"
        Foreground="White"
        Background="Transparent"
        BorderThickness="0"
        Cursor="Hand"
        Margin="0,10,0,10"
        Click="AbrirEliminatoria_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="OverridesDefaultStyle" Value="True"/>
                        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                        <Setter Property="Padding" Value="5"/>

                        <!-- Redibuja el texto del botón -->
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>

                        <!-- Animación hover -->
                        <Setter Property="RenderTransform">
                            <Setter.Value>
                                <ScaleTransform ScaleX="1" ScaleY="1"/>
                            </Setter.Value>
                        </Setter>

                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="#2FFF88"/>
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="1.1" ScaleY="1.1"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <!-- ⚽ Botón Liga -->
            <Button Content="Liga"
        FontFamily="Orbitron"
        FontSize="20"
        Foreground="White"
        Background="Transparent"
        BorderThickness="0"
        Cursor="Hand"
        Margin="0,10,0,10"
        Click="AbrirLiga">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="OverridesDefaultStyle" Value="True"/>
                        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                        <Setter Property="Padding" Value="5"/>

                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>

                        <Setter Property="RenderTransform">
                            <Setter.Value>
                                <ScaleTransform ScaleX="1" ScaleY="1"/>
                            </Setter.Value>
                        </Setter>

                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="#2FFF88"/>
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="1.1" ScaleY="1.1"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

        </StackPanel>
    </Grid>
</Window>